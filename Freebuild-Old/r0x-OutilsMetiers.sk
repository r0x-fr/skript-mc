on tool break:
# POUR PAYSAGISTE
	if tool is a shovel:
		if tool is a wooden shovel:
			if player has permission "jobs.paysagiste.incassable.woodenshovel":
				repair the tool
		if tool is a stone shovel:
			if player has permission "jobs.paysagiste.incassable.stoneshovel":
				repair the tool
		if tool is a iron shovel:
			if player has permission "jobs.paysagiste.incassable.ironshovel":
				repair the tool
		if tool is a golden shovel:
			if player has permission "jobs.paysagiste.incassable.goldenshovel":
				repair the tool
		if tool is a diamond shovel:
			if player has permission "jobs.paysagiste.incassable.diamondshovel":
				repair the tool
